<%- include('../partials/header'); %>
<h2>Update Dog</h2>
<div class="row">
    <form class="col s12" action="/dogs/<%= dog._id %>?_method=PUT" method="PUT">
      <div class="row">
        <div class="input-field col s12">
          <input id="dogName" value="<%= dog.name %>" name="name" type="text">
          <label for="dogName">Dog's Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="dogBreed" value="<%= dog.breed %>" name="breed" type="text">
          <label for="dogBreed">Dog's Breed</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="dogAge" value="<%= dog.age %>" name="age" type="text">
          <label for="dogAge">Dog's Age</label>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="ownerName" value="<%= dog.ownerName %>" name="ownerName" type="text">
            <label for="ownerName">Owner Name</label>
          </div>

        <div class="row">
            <div class="input-field col s12">
              <input id="address" value="<%= dog.address %>" name="address" type="text">
              <label for="Address">Address</label>
            </div>


            

            <form action="/dogs/ <%= dog._id %>/walks" method="POST">
              <label> time: </label>
                <select name="Walks">
                <option value="10min">10min</option>
                <option value="20min">20min</option>
                <option value="30min">30min</option>
                <option value="more">more</option>
                </select>
            <br></br> 
                <label> miles: </label>
                <select name="Walks">
                <option value="1mile">1mile</option>
                <option value="2miles">2miles</option>
                <option value="2+miles">2+miles</option>
                <option value="more">more</option>
                </select>
            </form>


          
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Update Dog
        <i class="material-icons right">send</i>
      </button>
      <a class="btn waves-effect red waves-light" href="/dogs/myDogs">Cancel
      </a>
    </form>
  </div>
  <div class="row">
    <% dog.comments.forEach(function(d, idx) { %>
      <div class="commentfield input-field col s6">
          <input id="dogAge" disabled value="<%= d.comments %>" name="age" type="text">
          <form action="/dogs/<%= dog._id %>/<%= idx %>?_method=DELETE" method="POST">
          <button class="btn red waves-effect waves-light" type="submit" name="action">X</button>
          </form>
      </div>
    <% }) %>
</div>
<%- include('../partials/footer'); %>



